@model Wycieczka_Klient
@{
    ViewData["Title"] = "Edycja";
}

<h2>Edytuj rezerwację</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input hidden asp-for="Id_zamowienia" />
            <div class="form-group">
                <label asp-for="Id" class="control-label">Użytkownik</label>
                <input hidden asp-for="Id" />
                <br />
                <label>@ViewBag.User</label>
            </div>
            <div class="form-group">
                <label asp-for="Id_wycieczki" class="control-label">Wycieczka</label>
                <select asp-for="Id_wycieczki" class="form-control" asp-items="ViewBag.Id_wycieczki"></select>
                <span asp-validation-for="Id_wycieczki" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bilety" class="control-label">Ilość biletów</label>
                <input asp-for="Bilety" class="form-control" />
                <span asp-validation-for="Bilety" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
                <a asp-controller="Rezerwacje" asp-action="Wszystkie" class="btn btn-danger">Cofnij</a>
            </div>
        </form>
    </div>
</div>