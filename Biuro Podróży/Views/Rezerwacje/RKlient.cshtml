@model Biuro_Podróży.Models.Wycieczka_Klient


@{
    ViewData["Title"] = "Zamów wycieczkę";
}

<h4>Zamów bilety</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        @ViewBag.Id_wycieczki.
        <form asp-action="RKlient">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Bilety" class="control-label"></label>
                <input asp-for="Bilety" class="form-control" />
                <span asp-validation-for="Bilety" class="text-danger"></span>
            </div>
            <input type="submit" value="Zamów" class="btn btn-success" />
            <a asp-controller="Wycieczka" asp-action="Index" class="btn btn-danger">Cofnij</a>
        </form>
    </div>
</div>

