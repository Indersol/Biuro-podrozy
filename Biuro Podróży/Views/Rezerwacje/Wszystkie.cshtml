@model IEnumerable<Biuro_Podróży.Models.Wycieczka_Klient>

@{
    ViewData["Title"] = "Rezerwacje";
}

<h2>Lista rezerwacji</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Klient
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bilety)
            </th>
            <th>
                Cena
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wycieczka)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUser.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bilety)
            </td>
            <td>
                @{
                    var koszt = item.Bilety * item.Wycieczka.Cena;
                }
                @koszt
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Wycieczka.Miejsce)
            </td>
            <td>
                <a asp-action="Edit" asp-route-idz="@item.Id_zamowienia" class="btn btn-primary">Edycja</a>
                <a asp-action="Delete" asp-route-idz="@item.Id_zamowienia" class="btn btn-warning">Usuń</a>
            </td>
        </tr>
        }
    </tbody>
</table>
