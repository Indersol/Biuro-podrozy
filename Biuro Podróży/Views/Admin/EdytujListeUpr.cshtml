@model List<UserRoleViewModel>
@{
    ViewData["Title"] = "Dodaj uprawnienia";
}
<h2>Dodawanie uzytkowników do uprawnienia</h2>

<form method="post">
    <button type="submit" class="btn btn-primary">Dodaj</button>
    <a asp-controller="Admin" asp-action="WszystkieRole" class="btn btn-danger">Cofnij</a>
    <div class="row">
        @for (int i = 0; i < Model.Count; i++)
        {
        <div class="row">
            <input type="hidden" asp-for="@Model[i].UserId" />
            <input type="hidden" asp-for="@Model[i].UserName" />
            <input asp-for="@Model[i].IsSelected" class="form-check-input" />
            <label class="form-check-label" asp-for="@Model[i].IsSelected">@Model[i].UserName</label>
        </div>
        }
    </div>
</form>

