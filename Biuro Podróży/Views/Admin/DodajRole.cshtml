@model Biuro_Podróży.ViewModel.CreateRoleViewModel

@{
    ViewData["Title"] = "Dodaj Role";
}

<h2>Uprawnienia</h2>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleName" class="control-label">Poziom uprawnień</label>
                <!--<input asp-for="RoleName" class="form-control" /> -->
                <select asp-for="RoleName" class="form-control">
                    <option value="Admin">Admin</option>
                    <option value="Moderator">Moderator </option>
                    <option value="Klient">Klient</option>
                </select>
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Dodaj</button>
            <a asp-controller="Admin" asp-action="WszystkieRole" class="btn btn-danger">Cofnij</a>
        </form>
    </div>
</div>