@model EditUserViewModel
@{
    ViewData["Title"] = "Ustawienia";
}

<h2>Ustawienia konta</h2>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Imie" class="control-label">Imię</label>
                <input asp-for="Imie" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Nazwisko" class="control-label">Nazwisko</label>
                <input asp-for="Nazwisko" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Miasto" class="control-label">Miasto</label>
                <input asp-for="Miasto" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="NrTel" class="control-label">Numer Telefonu</label>
                <input asp-for="NrTel" class="form-control" />
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Zmień</button>
            <a asp-controller="Home" asp-action="Index" class="btn btn-danger">Cofnij</a>
        </form>
    </div>
</div>