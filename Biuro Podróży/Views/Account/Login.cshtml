@model Biuro_Podróży.ViewModel.LoginViewModel

@{
    ViewData["Title"] = "Logowanie";
}

<div class="row">
    <div class="col-md-6">
        <h3>Użyj lokalnego konta</h3>
        <hr />
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="ReamemberMe">
                        <input asp-for="ReamemberMe" />
                        @Html.DisplayNameFor(m => m.ReamemberMe)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Zaloguj" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <h3>Użyj konta zewnętrznego</h3>
        <hr />
        @{ 
            if(Model.ExternalLogins.Count == 0)
            {
                <div>Brak</div>
            }
            else
            {
                <form method="post" asp-action="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl">
                    <div>
                        @foreach(var provider in Model.ExternalLogins)
                        {
                            <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name"
                                    title="@provider.DisplayName">@provider.DisplayName</button>
                        }
                    </div>
                </form>
            }
        }
    </div>
</div>
